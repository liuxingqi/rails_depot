<h1 class='text-center'>Your Pragmatic Catalog</h1>

	<% @products.each do |product| %>
      <li class="span4">
      	<div class="thumbnail">
      	<a href="#" class="thumbnail"><%= link_to(image_tag(product.image_url),
      	line_items_path(:product_id => product),
      	html_options = {:method => :post } )%></a>
        <h4><%= product.title %></h4>
        <%= number_to_currency(product.price) %>
        <%= button_to 'Add to cart', line_items_path(:product_id => product),
        :remote => true%>
        </div>
      </li>
<% end %>
