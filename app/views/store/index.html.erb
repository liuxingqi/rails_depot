 <div class='row-fluid'>
 <ul class="thumbnails">
	<% @products.each do |product| %>
      <li class="span4 text-center">
      	<div class="thumbnail">
         <%= link_to image_tag(product.image_url, size: '350x250'), product_url(product) %>
        <h5><%= product.title %></h5>
        <strong><%= number_to_currency(product.price) %></strong>
        <%= button_to 'Add to cart', 
            line_items_path(:product_id => product),
            :remote => true %>
      </div>
        </li>    
<% end %>

 </ul>
</div>